<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.quranmap.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock.Light.DarkActionBar" >
        <activity
            android:name="com.quranmap.android.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|locale"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sonyericsson.tutorial.zoom4.TutorialZoomActivity4"
            android:configChanges="orientation|keyboardHidden|screenSize|locale"
            android:label="@string/title_activity_map_fullscreen"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.quranmap.android.SurahDetails"
            android:configChanges="orientation|keyboardHidden|screenSize|locale"
            android:label="@string/title_activity_surah_details" >
        </activity>
        <activity
            android:name="com.quranmap.android.Share"
            android:configChanges="orientation|keyboardHidden|screenSize|locale"
            android:label="@string/title_activity_share" >
        </activity>
        <activity
            android:name="com.quranmap.android.About"
            android:configChanges="orientation|keyboardHidden|screenSize|locale"
            android:label="@string/title_activity_about" >
        </activity>
        <meta-data android:value="@string/app_id" android:name="com.facebook.sdk.ApplicationId"/>
        <activity android:label="@string/app_name" android:theme="@android:style/Theme.Translucent.NoTitleBar" android:name="com.facebook.LoginActivity"></activity>
    </application>

</manifest>